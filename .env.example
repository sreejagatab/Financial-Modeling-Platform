# ===========================================
# Financial Modeling Platform - Environment Configuration
# ===========================================
# Copy this file to .env and update the values for your environment
# DO NOT commit .env files to version control

# ===========================================
# Environment
# ===========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_USER=fmp_user
POSTGRES_PASSWORD=fmp_password
POSTGRES_DB=financial_platform
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://fmp_user:fmp_password@postgres:5432/financial_platform

# ===========================================
# Redis Cache
# ===========================================
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# ===========================================
# Backend API
# ===========================================
BACKEND_PORT=8001
BACKEND_TARGET=production
SECRET_KEY=change-this-to-a-secure-random-string-in-production
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# ===========================================
# Frontend
# ===========================================
FRONTEND_PORT=3000
FRONTEND_TARGET=production
VITE_API_URL=http://localhost:8001
VITE_WS_URL=ws://localhost:8001

# ===========================================
# MinIO (S3-compatible storage)
# ===========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET_KEY=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ===========================================
# External Services (if needed)
# ===========================================
# OPENAI_API_KEY=your-api-key
# ANTHROPIC_API_KEY=your-api-key
